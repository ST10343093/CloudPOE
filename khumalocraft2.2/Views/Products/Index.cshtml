@model IEnumerable<khumalocraft2._2.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">

    <div class="container">

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav mr-auto">

                <li class="nav-item">

                    <a class="nav-link" href="/Products">Products</a>

                </li>

                <li class="nav-item">

                    <a class="nav-link" href="/Orders/Admin">Order Status</a>

                </li>

                <li class="nav-item">

                    <a class="nav-link" href="/Transactions"> Transactions</a>

                </li>

                <li class="nav-item">

                    <a class="nav-link" href="/AppRoles/">Roles</a>

                </li>

            </ul>

        </div>

    </div>

</nav>


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Availability)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <!-- Span across all columns -->
                    <!-- Product Details -->
                    <strong>Product Name:</strong> @item.Name<br />
                    <strong>Price:</strong> @item.Price<br />
                    <strong>Category:</strong> @item.Category<br />
                    <strong>Image:</strong> <img src="@item.ImageUrl" alt="@item.Name" style="max-width: 100px;" /><br />
                    <strong>Availability:</strong> @Html.DisplayFor(modelItem => item.Availability)<br />
                    <!-- You can add more details here -->
                </td>
            </tr>
        }
    </tbody>
</table>
